@model WebShop.Web.Infrastructure.Core.PaginationSet<WebShop.Web.Models.ProductViewModel>

@{
    var keyword = (string)ViewBag.Keyword;
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    
}
<div class="women-product">
    <div class="w_content">
        <div class="women">
            <a href=""><h4>Kết quả tìm kiếm: @keyword <span>@Model.TotalCount itemms</span> </h4></a>
            <ul class="w_nav">
                <li>Sort : </li>
                <li><a class="active" href="?page=@Model.Page&sort=popular">popular</a></li> |
                <li><a href="?page=@Model.Page&sort=new">new </a></li> |
                <li><a href="?page=@Model.Page&sort=discount">discount</a></li> |
                <li><a href="?page=@Model.Page&sort=price">price: Low High </a></li>
                <div class="clearfix"> </div>
            </ul>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- grids_of_4 -->
    <div class="grid-product">
        @if (Model.Count > 0)
        {
            foreach (var product in Model.Items)
            {
                var url = "/" + product.Alias + ".p-" + product.ID;
                <div class="product-grid">
                    <div class="content_box">
                        <a href="@url">
                            <div class="left-grid-view grid-view-left">
                                <img src="@product.Image" class="img-responsive watch-right" alt="@product.Name" />
                                <div class="mask">
                                    <div class="info">Quick View</div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <h4><a href="@url"> @product.Name </a></h4>
                    <p>@product.Description</p>
                    @(product.Price == 0 ? "" : product.Price.ToString("N2"))
                </div>

            }
            <div class="clearfix"> </div>
            if (Model.TotalPages > 1)
            {
                var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);
                <nav>
                    <ul class="pagination">
                        @if (Model.Page > 1)
                        {
                            <li><a href="?page=1">&laquo;&laquo;</a></li>
                            <li><a href="?page=@(Model.Page-1)">&laquo;</a></li>
                        }
                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            <li><a href="?page=@i">@i</a></li>
                        }
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li><a href="?page=@(Model.Page+1)">&raquo;</a></li>
                            <li><a href="?page=@(Model.TotalPages)">&raquo;&raquo;</a></li>
                        }
                    </ul>
                </nav>
            }

        }
        else
        {
            <div class="text-center"> Don't have product view!  </div>
        }
    </div>
</div>